@model IEnumerable<Company>
@{
    ViewData["Title"] = "Index";
}
<div class="row page-box">
    <div>
        <h2>Companies List</h2>
        @using (Html.BeginForm("Index", "Company", FormMethod.Get))
        {
            <div class="input-group col-md-12" style="margin-bottom: 14px">
                <input type="text" class="form-control" placeholder="Enter company name here..."
                       name="search" id="search" />
                <span class="input-group-btn">
                    <button class="btn btn-info" type="submit">
                        <i class="glyphicon glyphicon-search"></i>
                    </button>
                </span>
            </div>
        }
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Company Name</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var company in Model.OrderBy(o => o.Id))
                {
                    <tr>
                        <td>@company.Id</td>
                        <td>@company.Name</td>
                        <td>
                            @using (Html.BeginForm("Delete", "Company", new { company.Id }, FormMethod.Post, null, new { style = "display:inline;" }))
                            {
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-danger">Delete</button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        </div>
</div>