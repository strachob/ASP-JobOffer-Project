@model JobApplicationApplyView
@{
    ViewData["Title"] = "Apply";
}

<div class="row page-box">
    <div class="col-sm-12">
        <h2 class="text-primary">Apply for: @Model.JobOffer.JobTitle at @Model.JobOffer.Company.Name</h2>
        @using (Html.BeginForm("Apply"))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.OfferId)
            <div class="form-group">
                @Html.LabelFor(m => m.FirstName, "First name")
                @Html.EditorFor(m => m.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.LastName, "Last name")
                @Html.EditorFor(m => m.LastName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.EmailAddress, "Contact email address")
                @Html.EditorFor(m => m.EmailAddress, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.EmailAddress, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.PhoneNumber, "Contact phone number")
                @Html.EditorFor(m => m.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ApplicationDescription, "Why do you want to apply for this position?")
                @Html.TextAreaFor(m => m.ApplicationDescription, new { @class = "form-control", placeholder = "Enter why you want to apply" })
                @Html.ValidationMessageFor(m => m.ApplicationDescription, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Apply Now</button>
            </div>
        }
    </div>
</div>

